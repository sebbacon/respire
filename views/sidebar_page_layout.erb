
   <div id="blog_wrapper" class="blog_post">
     <div class="container">
       <div class="row">
         <div class="span8">

           <h1 class="header">
             <%= @title %>
           </h1>
           <img class="post_pic" src="/images/blog_post.jpg" />

           <div class="post_content">
             <%= yield %>
           </div>
         </div>
         <div class="span3 sidebar offset1">
           <% if !@menu.empty? %>
           <h4 class="sidebar_header">
             Menu
           </h4>
           <ul class="sidebar_menu">
             <% @menu.each do |url, title| %>
             <li><a href="<%= url %>"><%= title %></a></li>
             <% end %>
           </ul>
           <% end %>

         </div>
       </div>
     </div>
   </div>
